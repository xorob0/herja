{
  "name": "@herja/core",
  "description": "A home assistant library for nodeJS",
  "version": "1.4.0",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "keywords": [
    "homeassistant",
    "iot",
    "automation"
  ],
  "author": {
    "name": "Tim Simon",
    "email": "npm@toum.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xorob0/homeassistant-node"
  },
  "scripts": {
    "build": "tsup src/index.ts --minify --clean --dts --splitting",
    "dev": "tsup src/index.ts --clean --watch src --dts",
    "generate": "tsup-node src/generate.ts",
    "lint": "eslint src/**/*.ts",
    "test": "vitest --global test.ts",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prerelease": "npm run build",
    "release": "dotenv release-it",
    "prepare": "husky install && cd ./samples/basic && npm install",
    "commitlint": "commitlint",
    "basic-sample": "cd ./samples/basic && npm run start",
    "update-samples": "zx ./scripts/update-samples.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.4.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.6.3",
    "typescript": "^4.6.2",
    "vitest": "^0.12.2",
    "zx": "^6.1.0"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "home-assistant-js-websocket": "^7.0.3",
    "ws": "^8.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
